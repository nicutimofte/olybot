{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "dist",
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "sourceMap": false,
    "typeRoots" : ["./src/@types", "./node_modules/@types"]
  },
  "paths": {
    "*": [
      "*",
      "node_modules"
    ]
  },
  "files": [
    "./node_modules/@types/mocha/index.d.ts",
    "./node_modules/@types/node/index.d.ts"
  ],
  "include": [
    "src/**/*.ts",
    "types/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
